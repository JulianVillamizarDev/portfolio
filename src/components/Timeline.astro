---
import { type TimelineObj } from '../types.d';

interface Props {
    title: string;
    description?: string;
    obj: Array<TimelineObj>;
}

const { title, description, obj } = Astro.props;

---
<div>
    <h1 class="text-primary-400 bold my-2">{ title }</h1>
    <p class="text-primary-600 mb-2"> { description } </p>
    <ol class="relative border-s border-primary-200 dark:border-primary-700 mt-4">         
        
        {
            obj.map( item => (
                <li class="mb-10 ms-6">
                    <span class="absolute flex items-center justify-center w-6 h-6 bg-primary-600 rounded-full -start-3 ring-1">
                        <svg class="w-2.5 h-2.5 text-primary-900" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
                        </svg>
                    </span>
                    <h3 class="mb-1 font-semibold text-primary-300">{item.title}</h3>
                    <time class="block mb-2 text-sm font-normal leading-none text-primary-600 ">{ item.date }</time>
                    <p class="font-normal text-primary-500 ">{ item.description}</p>
                </li>
            ))
        }
    </ol>   
</div>


