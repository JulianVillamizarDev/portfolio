					<div class="my-2">
						<h4 class="text-primary-600 italic">Contact</h4>
						<Link text='julianvillamizardev@gmail.com' link='mailto:julianvillamizardev@gmail.com' style='secondary'/>
					</div>
					<div class="my-2">
						<h4 class="text-primary-600 italic">Socials</h4>
						<ul class="flex flex-col gap-2">
							{
								socials.map( link => (
									<Link text={link.text} link={link.href} style='secondary'/>
								))
							}
						</ul>
					</div>
				</Card>	
