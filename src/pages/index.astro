				<Card>
					<h1 class="text-primary-400">üí°Projects</h1>
					<ul>
						{
							projects.map( project => (
								<Project title={project.title} description={project.description} href={project.href}/>
							))
						}
					</ul>
				</Card>
			</div>
			<div class="2xl:col-span-4 2xl:row-span-1 lg:col-span-2">
